<div class="site-sidebar">

	<% display_toc = (is_post() || is_page()) && post.toc === true; %>
	
	<div class="sidebar-switch clearfix <%- display_toc ? 'show' : '' %>"
		style="display: <%- display_toc ? 'block' : 'none' %>">
		<a class="dark-btn active" data-toggle="toc">
	    <span class="icon icon-list"></span>
	    <span class="text">Index</span>
	  </a>
	  <a class="dark-btn" data-toggle="bio">
	    <span class="icon icon-person"></span>
	    <span class="text">Bio</span>
	  </a>
	</div>

	<div class="site-toc <%- display_toc ? 'show' : '' %>"
		style="display: <%- display_toc ? 'block' : 'none' %>">
		<% if ( display_toc ) { %>
	  	<%- toc(post.content) %>
	  <% } else { %>
	    <div class="no-index">No Index</div>
	  <% } %>
  </div>
  
	<div class="site-bio <%- display_toc ? '' : 'show' %>"
		style="display: <%- display_toc ? 'none' : 'block' %>">
		
	  <!-- About Me -->
	  <div class="about-me clearfix">
	    <div class="avatar">
	      <img src="<%- url_for(theme.author_avatar) %>" />
	    </div>
	    <div class="info">
	      <a class="name dark-btn" href="<%- url_for() %>about">
	        <%- config.author %>
	      </a>
	    </div>
	    <div class="info">
	      <span class="item desc">
	        <%- config.description %>
	      </span>
	    </div>
	  </div>
	
	  <!-- Social Icons -->
	  <div class="social clearfix">
	    <% if (theme.social) { %>
	      <% theme.social.forEach(function(value, key) {
	           if (value.url && value.name) { %>
	        <a href="<%= url_for(value.url) %>" class="<%= value.name %>"
	          target="_blank" rel="external">
	          <span class="icon icon-<%= value.name %>"></span>
	        </a>
	      <% } }); %>
	    <% } %>
	  </div>

      <!-- Menu -->
	  <div class="menu section">
	   <ul class="clearfix">
		<li ><a href="/tags" onfocus="this.blur()" class="dark-btn block">Tags</a></li>
		<li ><a href="/archives" onfocus="this.blur()" class="dark-btn block">Archives</a></li>
	   </ul>
	  </div>

	</div>
	
	<!-- Home & Bottom -->
	<div class="shortcuts clearfix">
	  <a href="#header" class="dark-btn window-nav">
	    <span class="icon icon-chevron-thin-up"></span>
	  </a>
	  <a href="#footer" class="dark-btn window-nav">
	    <span class="icon icon-chevron-thin-down"></span>
	  </a>
	</div>

</div>
